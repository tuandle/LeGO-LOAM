<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <!--- Sim Time -->
  <param name="/use_sim_time" value="true" />
  <arg name="use_combined" value="true"/>

  <arg name="imu_topic" value="/imu/data1"/>

  <!-- <arg name="cloud_topic" value="/velodyne_points"/> -->
  <arg name="cloud_topic" value="/os1_node/points"/>

  <!--- Run Rviz-->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find lego_loam)/launch/test.rviz" unless="$(arg use_combined)"/>

  <!--- TF loam use camera frame  -->
  <node pkg="tf" type="static_transform_publisher" name="camera_init_to_map"  args="0 0 0 1.570795   0        1.570795 /map    /camera_init 10" />
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_camera" args="0 0 0 -1.570795 -1.570795 0        /camera /base_link   10" />
  <node pkg="tf" type="static_transform_publisher" name="lidar2base_publisher" args="0 0 1.0 0 0 0 base_link velodyne 10" />
  <!-- <node pkg="tf" type="static_transform_publisher" name="lidar2base_publisher" args="0 0 1.0 0 0 0 base_link os1 10" /> -->

  <!--- LeGO-LOAM -->    
  <node pkg="lego_loam" type="imageProjection"    name="imageProjection"    output="screen" >
    <param name="cloud_topic" value="$(arg cloud_topic)"/>
  </node>
  <node pkg="lego_loam" type="featureAssociation" name="featureAssociation" output="screen">
    <param name="imu_topic" value="$(arg imu_topic)"/>
  </node>
  <node pkg="lego_loam" type="mapOptmization"     name="mapOptmization"     output="screen">
    <param name="imu_topic" value="$(arg imu_topic)"/>
  </node>
  <node pkg="lego_loam" type="transformFusion"    name="transformFusion"    output="screen"/>

  <!-- <node pkg="hector_trajectory_server" type="hector_trajectory_server" name="lidar_path" output="screen">
    <param name="target_frame_name" type="string" value="/map" />
    <param name="source_frame_name" type="string" value="/base_link" />
    <param name="trajectory_update_rate" type="double" value="4" />
    <param name="trajectory_publish_rate" type="double" value="4" />
  </node> -->

</launch>
